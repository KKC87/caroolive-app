    <style name="clusetFuelEconomyText" parent="clusterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">70dp</item>
    </style>

    <style name="mainTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="mainValueText" parent="mainTitleText">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="mainUnitText" parent="mainTitleText">
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="MainTitleTextGray" parent="mainTitleText">
        <item name="android:textColor">#686868</item>
    </style>

    <style name="MainValueTextGray" parent="MainTitleTextGray">
        <item name="android:textSize">24dp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="MainUnitTextGray" parent="MainTitleTextGray">
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textSize">12dp</item>

    </style>

    <style name="myRankingText" parent="defaultText">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="myRankingMemberNameText" parent="myRankingText">
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="myRankingCaptionText" parent="myRankingText">
        <item name="android:textSize">10sp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="myRankingValueText" parent="myRankingText">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="mainWeeklyRankingText" parent="myRankingText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">32sp</item>
        <item name="android:gravity">center_horizontal</item>

    </style>


</resources>
