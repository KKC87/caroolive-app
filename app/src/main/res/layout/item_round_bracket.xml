<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="left|center_vertical">

    <TextView
        android:id="@+id/base_text"
        style="@style/rankingInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:text="(강원)"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/main_text"
        style="@style/memberNameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/base_text"
        android:text="@string/empty_string_value"
        android:layout_marginRight="2dp"
        tools:text="아반떼 소나타 그랜저 애쿠스 하이브리드 소나타 하이브리드 소나타 하이브리드" />

    <TextView
        android:id="@+id/sub_text"
        style="@style/rankingInfoText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/main_text"
        android:layout_alignBaseline="@id/main_text"
        tools:text="(강원)" />

</RelativeLayout>