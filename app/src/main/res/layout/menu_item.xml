<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:minHeight="48dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/row_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="12dp"
        android:contentDescription="@null"
        tools:src="@drawable/icon_notice_p" />

    <TextView
        android:id="@+id/row_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@drawable/menu_text_color"
        android:textSize="14sp"
        tools:text="@string/navigation_drawer_menu_notice" />

    <ImageView
        android:id="@+id/row_badge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:contentDescription="@null"
        android:src="@drawable/badge_new"
        android:visibility="gone"
        />

    <ImageView
        android:id="@+id/update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="2dp"
        android:contentDescription="@null"
        android:src="@drawable/btn_update"
        android:visibility="gone"
        />

</LinearLayout>