<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- actionBar -->
    <style name="actionBarStyle" parent="Widget.AppCompat.ActionBar.Solid">
        <!-- remove shadow below action bar -->
        <!-- <item name="android:elevation">0dp</item> -->
        <!-- Support library compatibility -->
        <item name="elevation">0dp</item>
        <!-- Remove shadow below action bar Android < 5.0 -->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <!-- actionMode -->
    <style name="actionModeStyle" parent="Widget.AppCompat.ActionMode">
        <item name="background">@color/primary_dark</item>
        <item name="backgroundSplit">@color/primary_dark</item>
    </style>

    <!-- actionBar.Transparent -->
    <style name="actionBarStyle.Transparent" parent="actionBarStyle">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundStacked">@android:color/black</item>
    </style>

    <!-- ProgressBar -->
    <style name="progressBarStyle" parent="Widget.AppCompat.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:minWidth">30dp</item>
        <item name="android:minHeight">30dp</item>
    </style>

    <!-- speedText -->
    <style name="speedText">
        <item name="android:gravity">right</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.2</item>
        <item name="android:textColor">#ffffbf00</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">30dp</item>
        <item name="android:text">--</item>
    </style>

    <!-- speedUnitText -->
    <style name="speedUnitText">
        <item name="android:gravity">left</item>
        <item name="android:shadowColor">#ff000000</item>
        <item name="android:shadowDx">1.2</item>
        <item name="android:shadowDy">1.2</item>
        <item name="android:shadowRadius">1.2</item>
        <item name="android:textColor">#ffffffff</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
        <item name="android:text">km/h</item>
    </style>

    <style name="defaultText">
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="clusterText" parent="defaultText">
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="clusterMeterText" parent="clusterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">right</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/cluster_meter_text</item>
    </style>

    <style name="clusterMeterUnitText" parent="clusterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/cluster_mater_unit_text</item>
    </style>

    <style name="clusterValueText" parent="clusterText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">@dimen/cluster_value_text</item>
    </style>

    <style name="clusterUnitText" parent="clusterText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/cluster_unit_text</item>
    </style>

    <style name="centerMeterText" parent="clusterText">
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="centerUnitText" parent="clusterText">
        <item name="android:textSize">8dp</item>
    </style>

    <style name="rankingText" parent="defaultText" >
        <item name="android:textColor">#686868</item>
    </style>

    <style name="memberNameText" parent="rankingText">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="rankingInfoText" parent="rankingText">
        <item name="android:textSize">9sp</item>
    </style>

    <style name="rakingValueText" parent="rankingText" >
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="fuelSavedText" parent="rakingValueText">
        <item name="android:textSize">12sp</item>
    </style>


    <style name="SpeedMeter">
        <item name="android:minWidth">140dp</item>
        <item name="speedTextSize">65dp</item>
        <item name="speedTextColor">@android:color/white</item>
        <item name="speedUnitTextSize">12dp</item>
        <item name="speedUnitTextColor">@android:color/white</item>
    </style>

    <style name="PreviewSpeedMeter">
        <item name="android:minWidth">140dp</item>
        <item name="speedTextSize">65dp</item>
        <item name="speedTextColor">@android:color/white</item>
        <item name="speedTextShadowColor">@android:color/black</item>
        <item name="speedTextShadowDx">2.0</item>
        <item name="speedTextShadowDy">2.0</item>
        <item name="speedTextShadowRadius">1.5</item>
        <item name="speedUnitTextSize">12dp</item>
        <item name="speedUnitTextColor">@android:color/white</item>
        <item name="speedUnitShadowColor">@android:color/black</item>
        <item name="speedUnitShadowDx">2.0</item>
        <item name="speedUnitShadowDy">2.0</item>
        <item name="speedUnitShadowRadius">1.5</item>
    </style>

    <style name="DiagnosticIconText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:drawablePadding">6dp</item>
        <item name="android:textColor">#cbcbcb</item>
        <item name="android:enabled">false</item>
        <item name="android:textSize">12dp</item>
    </style>

    <style name="DialogTitleText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:drawablePadding">5dp</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="DialogBottomText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/img_popup_bottom</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">13dp</item>
    </style>

    <style name="RankingTopUnit">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
        <item name="android:textSize">9dp</item>
        <item name="android:textColor">#686868</item>
    </style>

    <style name="RankingTopUnitWhite">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:textSize">9dp</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="mainRecordText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:singleLine">true</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="mainRecordTitle" parent="mainRecordText">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">@dimen/main_record_title</item>
        <item name="android:drawablePadding">8dp</item>
    </style>

    <style name="mainRecordValue" parent="mainRecordText">
        <item name="android:textColor">#565656</item>
        <item name="android:textSize">@dimen/main_record_value</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">right|bottom</item>
    </style>

    <style name="mainRecordUnit" parent="mainRecordText">
        <item name="android:layout_gravity">bottom</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:textColor">#787878</item>
        <item name="android:textSize">@dimen/main_record_unit</item>
    </style>

